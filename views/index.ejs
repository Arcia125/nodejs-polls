<!doctype html>
    <head>
        <script src="/bundle.js"></script>
    </head>

    <body>
        <nav class='nav-bar'>
            <a href='/' class='page-title'>Nodejs Polls</a>
            <% if (username) { %>
                <a href='/user/polls' class='my-polls'>My Polls</a>
                <a href='/polls/new' class='new-poll'>New Poll</a>
                <a href='/user/' class='username'><%= username %></a>
                <a href='/logout' class='logout'>Sign out</a>
            <% } else { %>
                <a href='/auth/twitter' class='twitter-login'>Sign in with Twitter</a>
            <% } %>
        </nav>

        <% if (expressFlash.length > 0) { %>
            <div class='flash-message__info'>
            <%- expressFlash %>
            </div>
        <% } %>
         
        <% if (polls) { %>
            <div class='polls'>
                <% polls.forEach(poll => { %>
                    <a class='poll' href='/polls/<%= poll._id %>'>
                        <div class='poll__container'>
                            <span class='poll__title'><%= poll.title %></span>
                        </div>
                    </a>
                <% }); %>
        <% } %>

    </body>
</html>
